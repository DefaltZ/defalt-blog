import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import SpinningCube from "../components/SpinningCube.vue";
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			.cube-container {
				width: 100%;
				height: 300px;
				margin: 2em 0;
				display: flex;
				justify-content: center;
				align-items: center;
			}

			.container-body {
				background-color: #3b3b5b;
				border: 1px solid #333;
				border-radius: 8px;
				padding: 0;
				margin: 20px auto;
			}

			.container-body b {
				display: block;
				background-color: #2a2a44;
				padding: 15px 20px;
				border-top-left-radius: 8px;
				border-top-right-radius: 8px;
				border-bottom: 1px solid #333;
				margin: 0;
			}

			.container-body ul {
				padding: 20px;
				margin: 0;
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<h1>üßë‚ÄçüöÄ Hello!</h1>
